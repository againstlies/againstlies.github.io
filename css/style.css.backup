html {
	padding: 0px;
	margin: 0px;
}
body {
	background-color: #fff5cc;
	font-family: Georgia, serif;
	font-size: 18px;
	padding: 0px;
	margin: 0px;
}
a {
	color: rgb(0, 0, 150);
	text-decoration: none;
}
a:hover {
	text-decoration: underline;
}

/* header */
header {
	padding: 0px 0px 0px 0px;
	margin-bottom: 20px;
	background-color: rgb(10, 10, 10);
}
header table {
	border-collapse: collapse;
	padding: 0px;
}
header td {
	padding: 0px 10px 0px 10px;
}
header td a, header .menu a {
	color: #ffffe0;
	text-decoration: none;
}
header td a:hover {
	text-decoration: underline;
}
header img {
	display: block;
	height: 40px;
}
header .menu {
	position: absolute;
	right: 20px;
	top: 10px;
}
header .menu .line {
	height: 3px;
	background-color: #fff5cc;
	width: 27px;
}
header .menu .void {
	height: 5px;
	background-color: rgb(10, 10, 10);
	width: 27px;
}

/* content */
.main-content {
	margin: auto;
	max-width: 700px;
	min-height: 900px;
}
.main-content img {
	display: block;
	margin: auto;
	max-width: 100%;
	padding: 10px 0px 10px 0px;
}
.main-content p {
	line-height: 1.3;
}
.main-content iframe {
	width: 100%;
	min-height: 400px;
}
.main-content table {
	border-collapse: collapse;
	border: 1px solid;
}
.main-content td, .main-content th {
	border: 1px solid;
	padding: 5px;
}
.main-content li {
	margin: 5px 0px 5px 0px;
}

/* sidebar */
.sidebar {
	position: absolute;
	width: 250px;
	left: 10px;
	top: 70px;
}
.sidebar .item {
	margin: 5px 0px 5px 0px;
}
.sidebar img {
	width: 100%;
}
.sidebar .title {
	padding: 3px;
	border-bottom: 1px solid rgb(100, 100, 100);
}

/* footer */
footer {
	padding: 0px 10px 0px 10px;
	font-size: 16px;
}

/* responsive */
@media screen and (max-width: 1260px) {
	.sidebar {
		position: initial;
		margin: auto;
	}
}
@media screen and (max-width: 850px) {
	body {
		padding: 0px 0px 0px 0px;
	}
	.main-content {
		max-width: 100%;
		padding: 0px 10px 0px 10px;
	}
	header table .item {
		display: none;
	}
}
@media screen and (max-width: 400px) {
	blockquote {
		margin: 0px;
	}
}
